               L_ERROR_FLAG  = 1
               GOSUB A021_PROCESS_SYS0061
               GO A038_EXIT
            END
         END

         IF NOT(L_PAGE_BREAK_FLG) THEN L_T_D01_COUNT_LINES_NEEDED += 1
         L_ITEM_NBR  = POD1_LINE_NBR
         L_ITEM_CODE = POD1_PART_GL_WO
