              T_D01 := L_TAB : L_TAB : L_TAB : L_TAB : L_TAB : @SM
           END

           L_T_D01_COUNT_LINES += 1
           L_PAGE_BREAK_FLG = 0

        NEXT L_IND_DEL_LINE
*
*********************
