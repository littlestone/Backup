*********************
*
        IF L_COPY_TYPE = "I" THEN
           L_MAX_VM = DCOUNT(L_ITEM_INT_COMMENTS,@VM)
           FOR L_IND = 1 TO L_MAX_VM
               T_D01 := L_TAB:L_TAB:L_ITEM_INT_COMMENTS<1,L_IND>'L#95' :@SM
