           L_T_D01_COUNT_LINES = 0
           L_PAGE_BREAK_FLG = 1
        END ELSE
           IF NOT(L_PAGE_BREAK_FLG) THEN 
              T_D01 := @SM
              L_T_D01_COUNT_LINES += 1
           END
        END

        FOR L_IND_DEL_LINE = 1 TO L_MAX_ITEM_DEL_LINE
           IF L_ORIGINAL_VALUE THEN 
              L_QTY_ORDERED = POD1_PCH_QTY<1,L_IND_DEL_LINE>
           END ELSE
