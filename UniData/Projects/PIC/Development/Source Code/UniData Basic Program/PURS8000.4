                 IF L_IND_ITEM_DESC <= L_MAX_DESC AND L_ITEM_DESC<1,L_IND_ITEM_DESC> # "" THEN 
                    T_D01 := L_TAB :L_TAB: L_ITEM_DESC<1,L_IND_ITEM_DESC>'L#26': L_TAB
                 END ELSE
