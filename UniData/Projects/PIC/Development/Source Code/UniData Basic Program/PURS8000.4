              L_DOCK_DATE = L_DATE[7,4]:"-":L_DATE[1,5]'L#10'
           END

           BEGIN CASE
              CASE L_IND_DEL_LINE = 1
                 T_D01 := L_AW_BLACK8
                 T_D01 := L_TAB : L_AW_BLACK_BOLD8:L_ITEM_NBR"L#3":L_AW_BLACK8
